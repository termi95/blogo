{% extends "nav.html.twig" %}

{% block title %}{% trans %}mainPage.tittle{% endtrans %}{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    {{ parent() }}

    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" style="padding-top:60px">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
    <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner text-light text-center">

    <div class="carousel-item carousel-img-one active">
      <div class="carousel-text h-100 p-5 d-flex flex-column justify-content-center align-items-center"> 
          <div class="carousel-shadow"></div>
          <p>{% trans %}mainPage.carousel.quality{% endtrans %}</p>
          <p>{% trans %}mainPage.carousel.qualityDes{% endtrans %}</p>
      </div>
    </div>

    <div class="carousel-item carousel-img-two">
      <div class="carousel-text h-100 p-5 d-flex flex-column justify-content-center align-items-center"> 
        <div class="carousel-shadow"></div> 
        <p>{% trans %}mainPage.carousel.idea{% endtrans %}</p>
        <p>{% trans %}mainPage.carousel.ideaDes{% endtrans %}</p>
    </div>

    </div>

    <div class="carousel-item carousel-img-three">
      <div class="carousel-text h-100 p-5 d-flex flex-column justify-content-center align-items-center">
        <div class="carousel-shadow"></div>
        <p>{% trans %}mainPage.carousel.productivity{% endtrans %}</p>
        <p>{% trans %}mainPage.carousel.productivityDes{% endtrans %}</p>
      </div>

    </div>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </a>
</div>

<section id="cards">
  <div class="container">
    <div class="row">

      <div class="col-6 col-md-3 p-4">
        <div class="card" style="width: 18rem;">
          <div class="cards-logo d-flex justify-content-center">
            <i class="fab fa-symfony"></i>
          </div>
          <div class="card-body d-flex align-items-center">
            <p class="card-text">{% trans %}mainPage.skills.symfony{% endtrans %}</p>
          </div>
        </div>
      </div>

      <div class="col-6 col-md-3 p-4">
        <div class="card" style="width: 18rem;">
          <div class="cards-logo d-flex justify-content-center">
            <i class="fab fa-bootstrap"></i>
          </div>
          <div class="card-body d-flex align-items-center">
            <p class="card-text">{% trans %}mainPage.skills.bootstrap{% endtrans %}</p>
          </div>
        </div>
      </div>

      <div class="col-6 col-md-3 p-4">
        <div class="card" style="width: 18rem;">
          <div class="cards-logo d-flex justify-content-center">
            <i class="fas fa-database"></i>
          </div>
          <div class="card-body d-flex align-items-center">
            <p class="card-text">{% trans %}mainPage.skills.mysql{% endtrans %}</p>
          </div>
        </div>
      </div>

      <div class="col-6 col-md-3 p-4">
        <div class="card" style="width: 18rem;">
          <div class="cards-logo d-flex justify-content-center">
            <i class="fab fa-linux"></i>
          </div>
          <div class="card-body d-flex align-items-center">
            <p class="card-text">{% trans %}mainPage.skills.linux{% endtrans %}</p>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

