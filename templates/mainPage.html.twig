<section id="passions">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="passions-head">
        {% trans %}mainPage.passion.tittle{% endtrans %}
        <div class="under-line">
        </div>
      </div>
    </div>

    <div class="row passions-conntent">
      <div class="col-md-6 extra-space-bottom extra-space-top">
        <div class="d-flex justify-content-center">
            <i class="fas fa-wrench passions-icon"></i>{% trans %}mainPage.passion.car{% endtrans %}<i class="fas fa-wrench passions-icon"></i>
        </div>
        <div class="card" style="height: 34rem;">
          <img src="../../public/img/passion/passion-content-1.jpg" class="card-img-top" alt="car" style="max-width: 100%; height: 100%;">
          <div class="card-body">
            <p class="card-text">{% trans %}mainPage.passion.carDes{% endtrans %}</p>
          </div>
        </div>
      </div>
      <div class="col-md-6 extra-space-bottom extra-space-top">
        <div class="d-flex justify-content-center">
            <i class="fas fa-gamepad passions-icon"></i>{% trans %}mainPage.passion.game{% endtrans %}<i class="fas fa-gamepad passions-icon"></i>
        </div>
        <div class="card" style="height: 34rem;">
          <img src="../../public/img/passion/passion-content-2.jpg" class="card-img-top" alt="gamepad" style="max-width: 100%; height: 99%;">
          <div class="card-body">
            <p class="card-text">{% trans %}mainPage.passion.gameDes{% endtrans %}</p>
